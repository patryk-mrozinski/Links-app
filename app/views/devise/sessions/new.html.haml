.jumbotron{:style => "background-image: url('/images/new.jpg')"}
  %h1.display-4 Welcome! Do you wanna create better tomorrow for links with us?!
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .field
      = f.label :email
      %br/
      = f.email_field :email, autofocus: true, autocomplete: "email"
    .field
      = f.label :password
      %br/
      = f.password_field :password, autocomplete: "current-password"
    - if devise_mapping.rememberable?
      .field
        = f.check_box :remember_me
        = f.label :remember_me

    .actions
      = f.submit "Log in"

  .social-link
    = link_to "Sign in with Facebook", user_facebook_omniauth_authorize_path, class: "popup", "data-width": 600, "data-height": 400
  .social-link
    = link_to "Sign in with Google", user_google_oauth2_omniauth_authorize_path, class: "popup", "data-width": 600, "data-height": 400

  = render "devise/shared/links"
  %hr.my-4/
  %h5 You dont have an account ? Do you wanna join us, and help take care about links !?
  = link_to "Sign up", new_registration_path(resource_name), class: "btn btn-primary btn-lg"
