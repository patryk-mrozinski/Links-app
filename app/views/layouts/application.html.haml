!!! 5
%html
  %head
    %title
      LinksApp
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'

  %body
    = link_to "Create Account", new_user_registration_path, class: "btn btn-default"
    - if signed_in?
      = link_to "Logout", destroy_user_session_path, method: :delete, class: "btn btn-default"
    - else
      = link_to "Log in!", user_session_path, class: "btn btn-default"
    %p.notice= notice
    %p.alert= alert

    =yield
